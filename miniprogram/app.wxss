/**
 * 全局样式
 * 信息登记小程序
 */

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC',
    'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.container { padding: 30rpx; min-height: 100vh; }

.card {
  background: #fff; border-radius: 20rpx; padding: 36rpx;
  margin-bottom: 24rpx; box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.btn-primary {
  background: linear-gradient(135deg, #4A90D9, #5BA0E9);
  color: #fff; border: none; border-radius: 48rpx;
  height: 88rpx; line-height: 88rpx;
  font-size: 32rpx; font-weight: 500; letter-spacing: 2rpx; width: 100%;
}
.btn-primary[disabled] { background: #ccc; color: #999; }
.btn-primary::after { border: none; }

.btn-secondary {
  background: #fff; color: #4A90D9; border: 2rpx solid #4A90D9;
  border-radius: 48rpx; height: 88rpx; line-height: 84rpx;
  font-size: 32rpx; font-weight: 500; width: 100%;
}
.btn-secondary::after { border: none; }

.form-group { margin-bottom: 32rpx; }
.form-label { font-size: 28rpx; color: #666; margin-bottom: 12rpx; display: flex; align-items: center; }
.form-label .required { color: #4A90D9; margin-right: 4rpx; }

.form-input {
  background: #f8f8f8; border: 2rpx solid #eee; border-radius: 12rpx;
  padding: 20rpx 24rpx; font-size: 30rpx; width: 100%; box-sizing: border-box;
}
.form-input-placeholder { color: #bbb; }

.form-textarea {
  background: #f8f8f8; border: 2rpx solid #eee; border-radius: 12rpx;
  padding: 20rpx 24rpx; font-size: 30rpx; width: 100%; min-height: 160rpx; box-sizing: border-box;
}

.tag-group { display: flex; flex-wrap: wrap; gap: 16rpx; }
.tag {
  padding: 12rpx 28rpx; border-radius: 32rpx; font-size: 26rpx;
  background: #f5f5f5; color: #666; border: 2rpx solid #eee; transition: all 0.2s;
}
.tag.active { background: rgba(74, 144, 217, 0.1); color: #4A90D9; border-color: #4A90D9; }

.badge { display: inline-block; padding: 6rpx 18rpx; border-radius: 20rpx; font-size: 24rpx; font-weight: 500; }
.badge-pending { background: #FFF3E0; color: #F57C00; }
.badge-approved { background: #E8F5E9; color: #388E3C; }
.badge-published { background: #E3F2FD; color: #1976D2; }
.badge-rejected { background: #FFEBEE; color: #D32F2F; }
.badge-archived { background: #F5F5F5; color: #999; }

.empty-state { display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 100rpx 60rpx; }
.empty-state .emoji { font-size: 80rpx; margin-bottom: 24rpx; }
.empty-state .text { font-size: 30rpx; color: #999; text-align: center; }

.divider { height: 1rpx; background: #eee; margin: 24rpx 0; }

.gradient-bg { background: linear-gradient(180deg, #4A90D9 0%, #5BA0E9 100%); }
