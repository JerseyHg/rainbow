.page {
  min-height: 100vh;
  background: #f4f6fa;
  padding: 0 28rpx 240rpx;
}

/* ==================== 步骤条 ==================== */
.steps {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx 16rpx 24rpx;
  background: #fff;
  margin: 0 -28rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}
.step {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.step-dot {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: #eaecf0;
  color: #98a2b3;
  font-size: 24rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}
.step.active .step-dot {
  background: #5B8DEF;
  color: #fff;
}
.step.current .step-dot {
  box-shadow: 0 0 0 6rpx rgba(91, 141, 239, 0.2);
}
.step-label {
  font-size: 20rpx;
  color: #98a2b3;
  margin-top: 8rpx;
  font-weight: 500;
}
.step.active .step-label { color: #5B8DEF; }

.step-line {
  width: 56rpx;
  height: 4rpx;
  background: #eaecf0;
  margin: 0 8rpx;
  margin-bottom: 24rpx;
  border-radius: 2rpx;
  transition: background 0.3s;
}
.step-line.done { background: #5B8DEF; }

/* ==================== 卡片 & 表单 ==================== */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}
.card-title {
  display: block;
  font-size: 34rpx;
  font-weight: 700;
  color: #1a1a2e;
  margin-bottom: 28rpx;
}
.sub { font-size: 24rpx; color: #98a2b3; font-weight: 400; }
.tip { display: block; font-size: 24rpx; color: #98a2b3; margin-bottom: 20rpx; }

.field { margin-bottom: 28rpx; }
.label {
  display: block;
  font-size: 26rpx;
  color: #475467;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input {
  background: #f9fafb;
  border: 2rpx solid #eaecf0;
  border-radius: 14rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  width: 100%;
  color: #1a1a2e;
}

.textarea {
  background: #f9fafb;
  border: 2rpx solid #eaecf0;
  border-radius: 14rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  width: 100%;
  min-height: 180rpx;
  box-sizing: border-box;
  color: #1a1a2e;
  line-height: 1.6;
}

/* Picker 输入框 */
.picker-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.picker-input .placeholder { color: #98a2b3; }
.arrow { color: #98a2b3; font-size: 24rpx; }

.derived-info {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #5B8DEF;
  padding-left: 4rpx;
}

/* 两列布局 */
.row-2col { display: flex; gap: 20rpx; }
.col { flex: 1; }

/* ==================== 标签选择 ==================== */
.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
}
.tag {
  padding: 14rpx 28rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  background: #f2f4f7;
  color: #475467;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}
.tag.active {
  background: rgba(91, 141, 239, 0.1);
  color: #5B8DEF;
  border-color: #5B8DEF;
}

/* ==================== 已选兴趣 ==================== */
.selected-hobbies {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f2f4f7;
}
.selected-tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(91, 141, 239, 0.1);
  color: #5B8DEF;
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}
.selected-del {
  font-size: 22rpx;
  color: #98a2b3;
  padding: 0 4rpx;
}

/* 自定义兴趣输入 */
.hobby-add-row {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
}
.hobby-input { flex: 1; }
.hobby-add-btn {
  background: #5B8DEF;
  color: #fff;
  border: none;
  border-radius: 14rpx;
  font-size: 26rpx;
  padding: 0 28rpx;
  height: 88rpx;
  line-height: 88rpx;
  flex-shrink: 0;
}
.hobby-add-btn::after { border: none; }

/* ==================== 隐私提醒 ==================== */
.privacy-notice {
  background: #f0f7ff;
  border-radius: 14rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
}
.privacy-notice-text {
  font-size: 24rpx;
  color: #5B8DEF;
  line-height: 1.7;
}

.uploading-tip { color: #5B8DEF !important; }

/* ==================== 照片网格 ==================== */
.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.photo-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.photo-img {
  width: 100%;
  height: 100%;
}
.photo-del {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.photo-uploading {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}
.photo-uploading-text {
  font-size: 22rpx;
  color: #fff;
}
.photo-add {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #d0d5dd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: #f9fafb;
}
.add-icon { font-size: 44rpx; color: #98a2b3; }
.add-text { font-size: 22rpx; color: #98a2b3; }

/* ==================== 确认页预览 ==================== */
.confirm-card { padding-bottom: 24rpx; }
.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #1a1a2e;
  margin: 28rpx 0 16rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f2f4f7;
}
.section-label:first-of-type { border-top: none; margin-top: 8rpx; }

.pv-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 0;
}
.pv-l {
  font-size: 26rpx;
  color: #98a2b3;
  flex-shrink: 0;
}
.pv-r {
  font-size: 26rpx;
  color: #1a1a2e;
  text-align: right;
  font-weight: 500;
}

.pv-hobbies {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}
.pv-hobby-tag {
  background: #f2f4f7;
  color: #475467;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 长文本块 */
.pv-block {
  margin-top: 20rpx;
}
.pv-block-label {
  display: block;
  font-size: 24rpx;
  color: #98a2b3;
  margin-bottom: 8rpx;
}
.pv-block-content {
  display: block;
  font-size: 26rpx;
  color: #1a1a2e;
  line-height: 1.7;
  background: #f9fafb;
  padding: 20rpx;
  border-radius: 12rpx;
}

/* 照片预览 */
.pv-photos {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.pv-photo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}
.pv-empty { display: block; font-size: 26rpx; color: #98a2b3; }

.confirm-tip {
  padding: 24rpx 8rpx;
  font-size: 24rpx;
  color: #98a2b3;
  text-align: center;
  line-height: 1.7;
}

/* ==================== 底部操作栏 ==================== */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 24rpx 36rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}
.btn-back {
  flex: 1;
  background: #f2f4f7;
  color: #475467;
  border: none;
  border-radius: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 500;
}
.btn-back::after { border: none; }

.btn-next {
  flex: 2;
  background: linear-gradient(135deg, #5B8DEF, #7EA6F4);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(91, 141, 239, 0.3);
}
.btn-next::after { border: none; }

.btn-submit {
  flex: 2;
  background: linear-gradient(135deg, #12B76A, #32D583);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(18, 183, 106, 0.3);
}
.btn-submit::after { border: none; }
