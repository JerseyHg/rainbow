.page {
  min-height: 100vh;
  background: #f4f6fa;
  padding: 0 32rpx 80rpx;
}

/* ===== 加载 ===== */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 220rpx;
}
.loading-emoji { font-size: 80rpx; }
.loading-text { font-size: 28rpx; color: #98a2b3; margin-top: 20rpx; }

/* ===== 统计卡片 ===== */
.stats-card {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  border-radius: 24rpx;
  padding: 36rpx 0;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}
.stat-item { text-align: center; }
.stat-num {
  display: block;
  font-size: 42rpx;
  font-weight: 800;
  color: #1a1a2e;
}
.stat-num.used { color: #98a2b3; }
.stat-num.remaining { color: #5B8DEF; }
.stat-label {
  display: block;
  font-size: 22rpx;
  color: #98a2b3;
  margin-top: 6rpx;
  font-weight: 500;
}
.stat-divider { width: 1rpx; height: 56rpx; background: #eaecf0; }

/* ===== 卡片 ===== */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}
.card-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a2e;
  margin-bottom: 20rpx;
}

/* ===== 邀请码条目 ===== */
.code-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx 0;
  border-bottom: 1rpx solid #f9fafb;
  transition: all 0.3s;
}
.code-item:last-child { border-bottom: none; }
.code-item.used { opacity: 0.45; }
.code-item.copied {
  background: rgba(91, 141, 239, 0.05);
  border-radius: 14rpx;
  margin: 0 -16rpx;
  padding: 22rpx 16rpx;
}

.code-left { display: flex; flex-direction: column; gap: 6rpx; }
.code-text {
  font-size: 34rpx;
  font-weight: 700;
  color: #1a1a2e;
  letter-spacing: 6rpx;
  font-family: 'Courier New', monospace;
}
.code-status { font-size: 22rpx; color: #98a2b3; }
.code-status.available { color: #12B76A; }

.btn-copy {
  background: #5B8DEF;
  color: #fff;
  font-size: 24rpx;
  border: none;
  border-radius: 32rpx;
  padding: 0 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  min-width: 120rpx;
  font-weight: 500;
}
.btn-copy::after { border: none; }
.btn-copy.disabled { background: #eaecf0; color: #98a2b3; }

/* ===== 空状态 ===== */
.empty-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0 60rpx;
}
.empty-emoji { font-size: 80rpx; }
.empty-text { font-size: 32rpx; color: #475467; margin-top: 24rpx; font-weight: 600; }
.empty-desc { font-size: 26rpx; color: #98a2b3; margin-top: 10rpx; }

/* ===== 提示卡片 ===== */
.tips-card {
  padding: 28rpx 32rpx;
  background: rgba(91, 141, 239, 0.04);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}
.tips-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #5B8DEF;
  margin-bottom: 14rpx;
}
.tips-text {
  display: block;
  font-size: 24rpx;
  color: #98a2b3;
  line-height: 1.9;
}

/* ===== 分享按钮 ===== */
.share-wrap { padding: 16rpx 0 40rpx; }
.btn-share {
  background: linear-gradient(135deg, #5B8DEF, #7EA6F4);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  height: 92rpx;
  line-height: 92rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(91, 141, 239, 0.3);
}
.btn-share::after { border: none; }
