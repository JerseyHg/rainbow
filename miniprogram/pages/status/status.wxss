.page {
  min-height: 100vh;
  background: #f4f6fa;
  padding: 0 28rpx 80rpx;
}

/* ===== 加载 ===== */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 260rpx;
}
.loading-dot {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #eaecf0;
  border-top-color: #5B8DEF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}
@keyframes spin { to { transform: rotate(360deg); } }
.loading-text { font-size: 28rpx; color: #98a2b3; margin-top: 20rpx; }

/* ===== 空状态 ===== */
.empty-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 48rpx 80rpx;
  background: #fff;
  border-radius: 28rpx;
  margin-top: 80rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.04);
}
.empty-icon { font-size: 88rpx; margin-bottom: 24rpx; }
.empty-title { font-size: 34rpx; font-weight: 700; color: #1a1a2e; margin-bottom: 12rpx; }
.empty-desc { font-size: 28rpx; color: #98a2b3; margin-bottom: 48rpx; }

/* ===== 状态卡片 ===== */
.status-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 36rpx 40rpx;
  border-radius: 28rpx;
  margin-top: 16rpx;
  margin-bottom: 24rpx;
}
.status-pending   { background: linear-gradient(135deg, #FFF8ED, #FFF0D4); }
.status-approved  { background: linear-gradient(135deg, #ECFDF3, #D1FADF); }
.status-published { background: linear-gradient(135deg, #EFF8FF, #D1E9FF); }
.status-rejected  { background: linear-gradient(135deg, #FEF3F2, #FECDCA); }
.status-archived  { background: linear-gradient(135deg, #F9FAFB, #F2F4F7); }

.status-icon-wrap { margin-bottom: 12rpx; }
.status-icon { font-size: 76rpx; }

.status-main-label {
  font-size: 36rpx;
  font-weight: 800;
  color: #1a1a2e;
  margin-bottom: 8rpx;
}
.status-desc {
  font-size: 26rpx;
  color: #475467;
  text-align: center;
  line-height: 1.6;
}

.serial-badge {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 24rpx;
  padding: 10rpx 32rpx;
  margin-top: 24rpx;
  backdrop-filter: blur(10px);
}
.serial-label { font-size: 24rpx; color: #98a2b3; }
.serial-num { font-size: 30rpx; color: #1a1a2e; font-weight: 800; letter-spacing: 2rpx; }

/* ===== 操作按钮组 ===== */
.action-btns {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.btn-edit {
  flex: 1;
  background: #5B8DEF;
  color: #fff;
  border: none;
  border-radius: 44rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 500;
}
.btn-edit::after { border: none; }

.btn-delete {
  flex: 1;
  background: #fff;
  color: #F04438;
  border: 2rpx solid #FECDCA;
  border-radius: 44rpx;
  height: 80rpx;
  line-height: 76rpx;
  font-size: 28rpx;
  font-weight: 500;
}
.btn-delete::after { border: none; }

/* ===== 状态标签 ===== */
.status-tag {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
}
.status-tag-pending   { background: #FFF6ED; color: #F79009; }
.status-tag-approved  { background: #ECFDF3; color: #12B76A; }
.status-tag-published { background: #EFF8FF; color: #2E90FA; }
.status-tag-rejected  { background: #FEF3F2; color: #F04438; }
.status-tag-archived  { background: #F2F4F7; color: #98a2b3; }

/* ===== 卡片通用 ===== */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}
.card-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a2e;
  margin-bottom: 20rpx;
}

/* ===== 拒绝卡片 ===== */
.reject-card { border-left: 6rpx solid #F04438; }
.reject-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 16rpx;
}
.reject-icon { font-size: 32rpx; }
.reject-title { font-size: 30rpx; font-weight: 700; color: #1a1a2e; }
.reject-reason {
  display: block;
  font-size: 28rpx;
  color: #F04438;
  line-height: 1.7;
  background: #FEF3F2;
  padding: 20rpx 24rpx;
  border-radius: 14rpx;
  margin-bottom: 24rpx;
}
.reject-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.btn-delete-text {
  background: transparent;
  color: #98a2b3;
  border: none;
  font-size: 26rpx;
  text-decoration: underline;
  padding: 12rpx 0;
}
.btn-delete-text::after { border: none; }

/* ===== 信息行 ===== */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f9fafb;
}
.info-row:last-child { border-bottom: none; }
.info-label { font-size: 26rpx; color: #98a2b3; }
.info-value { font-size: 26rpx; color: #1a1a2e; font-weight: 500; }

/* ===== 邀请码入口 ===== */
.action-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}
.action-left { display: flex; align-items: center; gap: 20rpx; }
.action-icon-wrap { font-size: 44rpx; }
.action-title { display: block; font-size: 30rpx; font-weight: 600; color: #1a1a2e; }
.action-desc { display: block; font-size: 24rpx; color: #98a2b3; margin-top: 4rpx; }
.action-arrow { font-size: 36rpx; color: #d0d5dd; }

/* ===== 提示卡片 ===== */
.tips-card {
  background: rgba(91, 141, 239, 0.04);
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 20rpx;
}
.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #5B8DEF;
  margin-bottom: 16rpx;
}
.tips-text {
  display: block;
  font-size: 24rpx;
  color: #98a2b3;
  line-height: 1.9;
}

/* ===== 退出登录 ===== */
.logout-wrap {
  padding: 40rpx 0 20rpx;
}
.btn-logout {
  background: transparent;
  color: #98a2b3;
  border: 2rpx solid #eaecf0;
  border-radius: 44rpx;
  height: 80rpx;
  line-height: 76rpx;
  font-size: 28rpx;
}
.btn-logout::after { border: none; }
