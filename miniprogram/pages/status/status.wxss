page { background: #ffffff; margin: 0; padding: 0; }
.page { min-height: 100vh; background: #ffffff; padding: 24rpx 32rpx 60rpx; margin: 0; }

/* ===== 加载 ===== */
.loading-wrap { display: flex; flex-direction: column; align-items: center; padding-top: 200rpx; }
.loading-emoji { font-size: 80rpx; }
.loading-text { font-size: 28rpx; color: #999; margin-top: 16rpx; }

/* ===== 空状态 ===== */
.empty-card { background: #fff; border-radius: 24rpx; padding: 80rpx 40rpx; text-align: center; margin-top: 40rpx; box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.04); }
.empty-emoji { font-size: 80rpx; display: block; }
.empty-title { display: block; font-size: 34rpx; font-weight: 600; color: #333; margin-top: 24rpx; }
.empty-desc { display: block; font-size: 26rpx; color: #999; margin-top: 10rpx; margin-bottom: 40rpx; }

/* ===== 状态卡片 ===== */
.status-card {
  border-radius: 24rpx; padding: 48rpx 40rpx; text-align: center;
  margin-top: 0; margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.04);
}
.status-emoji { font-size: 72rpx; display: block; }
.status-label { display: block; font-size: 40rpx; font-weight: 700; margin-top: 16rpx; }
.status-desc { display: block; font-size: 26rpx; color: #666; margin-top: 12rpx; line-height: 1.5; }
.serial-badge {
  display: inline-block; background: rgba(255,255,255,0.7);
  border-radius: 24rpx; padding: 10rpx 32rpx; margin-top: 20rpx;
  backdrop-filter: blur(10px);
}
.serial-text { font-size: 28rpx; color: #333; font-weight: 600; letter-spacing: 2rpx; }

/* ===== 状态卡片变体 ===== */
.status-pending { background: linear-gradient(135deg, #FFF8E1, #FFECB3); }
.status-approved { background: linear-gradient(135deg, #E8F5E9, #C8E6C9); }
.status-published { background: linear-gradient(135deg, #E3F2FD, #BBDEFB); }
.status-rejected { background: linear-gradient(135deg, #FFEBEE, #FFCDD2); }
.status-archived { background: linear-gradient(135deg, #F5F5F5, #EEEEEE); }

.status-icon-wrap { margin-bottom: 8rpx; }
.status-icon { font-size: 72rpx; }

.serial-badge { display: inline-flex; align-items: center; gap: 8rpx; background: rgba(255,255,255,0.7); border-radius: 24rpx; padding: 10rpx 32rpx; margin-top: 20rpx; backdrop-filter: blur(10px); }
.serial-label { font-size: 24rpx; color: #999; }
.serial-num { font-size: 30rpx; color: #333; font-weight: 700; letter-spacing: 2rpx; }

/* ===== 状态标签 ===== */
.status-tag { display: inline-block; padding: 6rpx 20rpx; border-radius: 16rpx; font-size: 24rpx; font-weight: 500; }
.status-tag-pending { background: #FFF3E0; color: #F57C00; }
.status-tag-approved { background: #E8F5E9; color: #388E3C; }
.status-tag-published { background: #E3F2FD; color: #1976D2; }
.status-tag-rejected { background: #FFEBEE; color: #D32F2F; }
.status-tag-archived { background: #F5F5F5; color: #999; }

/* ===== 卡片通用 ===== */
.card {
  background: #fff; border-radius: 20rpx; padding: 32rpx;
  margin-bottom: 20rpx; box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.03);
}
.card-title { display: block; font-size: 30rpx; font-weight: 600; color: #333; margin-bottom: 20rpx; }

/* ===== 信息行 ===== */
.info-row { display: flex; justify-content: space-between; align-items: center; padding: 16rpx 0; }
.info-row + .info-row { border-top: 1rpx solid #f5f5f5; }
.info-label { font-size: 26rpx; color: #999; }
.info-value { font-size: 26rpx; color: #333; font-weight: 500; }

/* ===== 拒绝原因 ===== */
.reject-card { border-left: 6rpx solid #D32F2F; }
.reject-header { display: flex; align-items: center; gap: 8rpx; margin-bottom: 16rpx; }
.reject-icon { font-size: 32rpx; }
.reject-reason { display: block; font-size: 26rpx; color: #D32F2F; line-height: 1.6; background: #FFF5F5; padding: 16rpx 20rpx; border-radius: 12rpx; }
.reject-actions { margin-top: 28rpx; }

/* ===== 操作按钮组（审核中状态） ===== */
.action-btns {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}
.btn-edit {
  flex: 1;
  background: linear-gradient(135deg, #4A90D9, #357ABD);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.btn-edit::after { border: none; }
.btn-delete {
  flex: 1;
  background: #fff;
  color: #D32F2F;
  border: 2rpx solid #D32F2F;
  border-radius: 48rpx;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 76rpx;
}
.btn-delete::after { border: none; }

/* 拒绝卡片内的删除文字按钮 */
.btn-delete-text {
  background: none;
  border: none;
  color: #999;
  font-size: 24rpx;
  margin-top: 16rpx;
  text-decoration: underline;
  padding: 0;
  line-height: 2;
}
.btn-delete-text::after { border: none; }

/* ===== 操作卡片（我的邀请码） ===== */
.action-card {
  display: flex; align-items: center; justify-content: space-between;
  padding: 32rpx; background: linear-gradient(135deg, #4A90D9, #5BA0E9);
  border-radius: 20rpx; margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(74,144,217,0.3);
}
.action-left { display: flex; align-items: center; gap: 20rpx; }
.action-emoji { font-size: 48rpx; }
.action-icon-wrap { font-size: 44rpx; }
.action-info { display: flex; flex-direction: column; }
.action-title { font-size: 30rpx; font-weight: 600; color: #fff; }
.action-desc { font-size: 24rpx; color: rgba(255,255,255,0.8); margin-top: 4rpx; }
.action-arrow { font-size: 36rpx; color: rgba(255,255,255,0.6); }

/* ===== 提示 ===== */
.tips-card {
  padding: 28rpx 32rpx; background: #fff;
  border-radius: 20rpx; margin-bottom: 20rpx;
  border-left: 6rpx solid #4A90D9;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.03);
}
.tips-title { display: block; font-size: 26rpx; font-weight: 600; color: #4A90D9; margin-bottom: 12rpx; }
.tips-text { display: block; font-size: 24rpx; color: #888; line-height: 1.9; }

/* ===== 按钮 ===== */
.btn-primary {
  background: linear-gradient(135deg, #4A90D9, #5BA0E9);
  color: #fff; border: none; border-radius: 48rpx;
  height: 88rpx; line-height: 88rpx;
  font-size: 32rpx; font-weight: 500; width: 100%;
  box-shadow: 0 4rpx 12rpx rgba(74,144,217,0.3);
}
.btn-primary::after { border: none; }

/* ===== 退出登录 ===== */
.logout-wrap { padding: 40rpx 0; }
.btn-logout {
  background: #fff; color: #ccc; border: 1rpx solid #e8e8e8;
  border-radius: 48rpx; height: 80rpx; line-height: 80rpx;
  font-size: 28rpx;
}
.btn-logout::after { border: none; }
