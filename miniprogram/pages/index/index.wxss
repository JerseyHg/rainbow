.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0 36rpx 60rpx;
}

/* ===== 自动登录 ===== */
.auto-login-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 300rpx;
}
.auto-login-text {
  font-size: 30rpx;
  color: #999;
  margin-top: 24rpx;
}

/* ===== 顶部 ===== */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 50rpx;
}
.emoji { font-size: 80rpx; }
.title { font-size: 44rpx; font-weight: 700; color: #4A90D9; margin-top: 12rpx; }
.subtitle { font-size: 26rpx; color: #999; margin-top: 8rpx; }

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.label {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 28rpx;
}
.input {
  border: 2rpx solid #ddd;
  height: 96rpx;
  text-align: center;
  font-size: 44rpx;
  font-weight: 700;
  letter-spacing: 20rpx;
  border-radius: 12rpx;
  background: #fafafa;
  margin-bottom: 24rpx;
}

/* ===== 隐私勾选框 ===== */
.privacy-check-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 28rpx;
  padding: 0 8rpx;
}

.checkbox-wrap {
  padding-top: 4rpx;
  margin-right: 14rpx;
  flex-shrink: 0;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid #ccc;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  transition: all 0.2s;
}

.checkbox.checked {
  background: #4A90D9;
  border-color: #4A90D9;
}

.check-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: 700;
  line-height: 1;
}

.privacy-check-text-wrap {
  flex: 1;
  line-height: 1.6;
}

.privacy-check-text {
  font-size: 24rpx;
  color: #999;
}

.privacy-check-link {
  font-size: 24rpx;
  color: #4A90D9;
  text-decoration: underline;
}

.btn-main {
  background: linear-gradient(135deg, #4A90D9, #5BA0E9);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
}
.btn-main[disabled] { background: #ccc; color: #999; }
.btn-main::after { border: none; }

.tips {
  padding: 30rpx 12rpx;
  font-size: 24rpx;
  color: #bbb;
  line-height: 1.8;
}

.btn-dev {
  margin-top: 20rpx;
  background: #fff;
  color: #999;
  border: 1rpx solid #ddd;
  font-size: 26rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
}
.btn-dev::after { border: none; }

/* ===== 已登记直接登录 ===== */
.btn-relogin {
  margin-top: 30rpx;
  background: #fff;
  color: #4A90D9;
  border: 2rpx solid #4A90D9;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 76rpx;
  border-radius: 40rpx;
}
.btn-relogin[disabled] {
  color: #ccc;
  border-color: #ddd;
  background: #fafafa;
}
.btn-relogin::after { border: none; }

.relogin-hint {
  display: block;
  text-align: center;
  font-size: 22rpx;
  color: #F57C00;
  margin-top: 12rpx;
}
