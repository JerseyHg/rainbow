.page {
  min-height: 100vh;
  background: #f5f5f5;
}

.content {
  padding: 30rpx 36rpx 60rpx;
}

.main-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.update-info {
  display: block;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 30rpx;
}

.intro {
  display: block;
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
  margin-bottom: 30rpx;
  padding: 20rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin: 30rpx 0 16rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #4A90D9;
}

.para {
  display: block;
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
  margin-bottom: 12rpx;
}

.para.bold {
  font-weight: 600;
  color: #333;
}

.item {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding-left: 16rpx;
  margin-bottom: 6rpx;
}

/* ===== 平台隐私协议链接 ===== */
.contract-link {
  text-align: center;
  padding: 30rpx 0;
  margin-top: 20rpx;
}

.contract-link-text {
  font-size: 26rpx;
  color: #4A90D9;
  text-decoration: underline;
}

.footer {
  text-align: center;
  padding: 40rpx 0 20rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #ccc;
}
