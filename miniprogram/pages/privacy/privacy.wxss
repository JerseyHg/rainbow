.page {
  min-height: 100vh;
  background: #f4f6fa;
}

.content {
  padding: 32rpx 40rpx 80rpx;
}

.main-title {
  display: block;
  font-size: 38rpx;
  font-weight: 800;
  color: #1a1a2e;
  text-align: center;
  margin-bottom: 12rpx;
}

.update-info {
  display: block;
  font-size: 24rpx;
  color: #98a2b3;
  text-align: center;
  margin-bottom: 36rpx;
}

.intro {
  display: block;
  font-size: 26rpx;
  color: #475467;
  line-height: 1.8;
  margin-bottom: 32rpx;
  padding: 24rpx 28rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a2e;
  margin: 36rpx 0 16rpx;
  padding-left: 18rpx;
  border-left: 6rpx solid #5B8DEF;
}

.para {
  display: block;
  font-size: 26rpx;
  color: #475467;
  line-height: 1.8;
  margin-bottom: 14rpx;
}

.para.bold {
  font-weight: 700;
  color: #1a1a2e;
}

.item {
  display: block;
  font-size: 26rpx;
  color: #667085;
  line-height: 1.8;
  padding-left: 20rpx;
  margin-bottom: 8rpx;
}

/* ===== 隐私协议链接 ===== */
.contract-link {
  text-align: center;
  padding: 36rpx 0;
  margin-top: 24rpx;
}
.contract-link-text {
  font-size: 26rpx;
  color: #5B8DEF;
  text-decoration: underline;
}

.footer {
  text-align: center;
  padding: 48rpx 0 24rpx;
}
.footer-text {
  font-size: 24rpx;
  color: #d0d5dd;
}
